<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @category.title %>
      </p>

      <div class="panel-block">
        Category title: <%= @category.title %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_category_path(@category), class: 'button is-gray' %>
        <%= link_to 'Delete', category_path(@category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-gray' %>
      </div>
      <div class="column">

      </div>
    </div>

  </div>
</div>
